# Copy this file to secrets.yaml and fill in your actual credentials.
# Do not commit your real secrets.yaml to GitHub.

# Main WiFi credentials
wifi_ssid: "YOUR_WIFI_SSID"
wifi_password: "YOUR_WIFI_PASSWORD"

# API and OTA
# The 'api_encryption_key' is now required by modern ESPHome versions.
# Generate one with: openssl rand -base64 32
api_encryption_key: "YOUR_GENERATED_API_ENCRYPTION_KEY"
ota_password: "YOUR_OTA_PASSWORD"

# Default fallback hotspot password
fallback_password: "YOUR_FALLBACK_PASSWORD"

# MQTT credentials (if used)
mqtt_broker: "192.168.1.x"
mqtt_username: "user"
mqtt_password: "password"

# Device-specific credentials (optional overrides)
livingroom_ssid: "DEVICE_SPECIFIC_SSID"
livingroom_password: "DEVICE_SPECIFIC_PASSWORD"
livingroom_fallback_password: "DEVICE_SPECIFIC_FALLBACK"
